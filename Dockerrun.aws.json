{
  "AWSEBDockerrunVersion": 2,
  "volumes": [
    {
      "name": "grafana-app",
      "host": {
        "sourcePath": "/var/lib/sensor-data/grafana"
      }
    },
    {
      "name": "influxdb-app",
      "host": {
        "sourcePath": "/var/lib/sensor-data/influxdb"
      }
    },
    {
      "name": "mongodb-app",
      "host": {
        "sourcePath": "/var/lib/sensor-data/mongodb"
      }
    }
  ],
  "containerDefinitions": [
    {
      "name": "sensor-listener",
      "image": "sunkor/sensor-listener",
      "hostname": "sensor-listener",
      "essential": false,
      "links": ["influxdb"],
      "memory": 64
    },
    {
      "name": "weather-station",
      "image": "sunkor/weather-station",
      "hostname": "weather-station",
      "essential": false,
      "links": ["mongodb"],
      "memory": 64
    },
    {
      "name": "grafana",
      "image": "sunkor/grafana",
      "hostname": "grafana",
      "essential": false,
      "memory": 128,
      "mountPoints": [
        {
          "sourceVolume": "grafana-app",
          "containerPath": "/var/lib/grafana",
          "readOnly": false
        }
      ],
      "links": ["influxdb"],
      "portMappings": [
        {
          "hostPort": 3000,
          "containerPort": 3000
        }
      ]
    },
    {
      "name": "influxdb",
      "image": "influxdb",
      "hostname": "influxdb",
      "essential": false,
      "memoryReservation": 512,
      "mountPoints": [
        {
          "sourceVolume": "influxdb-app",
          "containerPath": "/var/lib/influxdb",
          "readOnly": false
        }
      ]
    },
    {
      "name": "nginx",
      "image": "sunkor/home-sensor-nginx",
      "hostname": "nginx",
      "essential": true,
      "portMappings": [
        {
          "hostPort": 80,
          "containerPort": 80
        }
      ],
      "links": ["sensor-listener", "grafana"],
      "memory": 64
    }
  ]
}
