{
  "AWSEBDockerrunVersion": 2,
  "containerDefinitions": [
    {
      "name": "sensor-listener",
      "image": "sunkor/sensor-listener",
      "hostname": "sensor-listener",
      "essential": false,
      "links": ["influxdb"],
      "memory": 128
    },
    {
      "name": "grafana",
      "image": "sunkor/grafana",
      "hostname": "grafana",
      "essential": false,
      "memory": 128,
      "links": ["influxdb"],
      "portMappings": [
        {
          "hostPort": 3000,
          "containerPort": 3000
        }
      ],
      "mountPoints": [
        {
          "containerPath": "/var/lib/grafana",
          "sourceVolume": "rexray-vol"
        }
      ]
    },
    {
      "name": "influxdb",
      "image": "influxdb",
      "hostname": "influxdb",
      "essential": false,
      "memory": 128,
      "mountPoints": [
        {
          "containerPath": "/var/lib/influxdb",
          "sourceVolume": "rexray-vol"
        }
      ]
    },
    {
      "name": "nginx",
      "image": "sunkor/home-sensor-nginx",
      "hostname": "nginx",
      "essential": true,
      "portMappings": [
        {
          "hostPort": 80,
          "containerPort": 80
        }
      ],
      "links": ["sensor-listener", "grafana"],
      "memory": 128
    }
  ],
  "volumes": [
    {
      "name": "rexray-vol",
      "dockerVolumeConfiguration": {
        "scope": "shared",
        "driver": "rexray/ebs"
      }
    }
  ]
}
